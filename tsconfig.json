{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "strict": true,
        "module": "es6",
        "target": "es5",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "types",
            "node_modules/@types"
        ],
        "moduleResolution": "node",
        "resolveJsonModule": true
    }
}